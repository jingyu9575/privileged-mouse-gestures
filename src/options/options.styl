@import '../common/common.css'
@import '../common/elements/x-tab.css'

html
	height: unset

x-tab
	display: flex
	align-items: center

x-page
	background-color: #f9f9fa
	padding: 8px
	display: flex
	flex-direction: column

	> *
		margin-bottom: 4px

.input-label
	input[type='text'], input:not([type])
		width: 12ch

	input[type='number']
		width: 12ch

	input.font-input
		width: 20ch

hr
	margin-block-start: 1em 0 0 0
	border: none

.additional-number-container
	> *
		vertical-align: middle

	input[type='number']
		width: 6.5ch
		margin-right: 2px

	.additional-number-prefix
		margin-left: 1ch

.gesture-code-example
	font-family: monospace
	margin-left: 2ch
	vertical-align: middle
	user-select: text
	-webkit-user-select: text

#mapping-table th:not(:empty)
	min-width: 12ch

.gesture-input
	width: 16ch
	font-family: monospace

.mapping-row.recording .gesture-input
	background-color: #acbdfe

.icon-button
	display: inline-flex
	align-items: center
	justify-content: center
	-webkit-appearance: button
	text-decoration: none
	height: 1.5em

	> .icon
		width: 1em
		height: 1em

	&, &::-moz-focus-inner
		padding: 0.2em 0.2em